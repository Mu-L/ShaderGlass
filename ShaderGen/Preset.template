%OVERRIDE%	OverrideParams(%LIB_NAME%%CLASS_NAME%PresetDefs::sOverrideDefs, sizeof(%LIB_NAME%%CLASS_NAME%PresetDefs::sOverrideDefs) / sizeof(OverrideParamDef));
	}
};
}