#pragma once

namespace %LIB_NAME%%CLASS_NAME%PresetDefs
{
%PARAMS% static constexpr PresetParamDef sParamDefs%SHADER_NO%[] = { %PRESET_PARAMS% };

%TEXTURES_PARAMS% static constexpr TextureParamDef sTextureParams%TEXTURE_NO%[] = { %TEXTURE_PARAMS% };

%OVERRIDES% static constexpr OverrideParamDef sOverrideDefs[] = { %PRESET_OVERRIDES% };
}

namespace %LIB_NAME%
{
class %CLASS_NAME%PresetDef : public PresetDef
{
public:
	%CLASS_NAME%PresetDef() : PresetDef{}
	{
		Name = "%PRESET_NAME%";
		Category = "%PRESET_CATEGORY%";
	}

	void Build() {
%SHADERS%	ShaderDefs.push_back(%SHADER_NAME%ShaderDef().WithParams(%LIB_NAME%%CLASS_NAME%PresetDefs::sParamDefs%SHADER_NO%, sizeof(%LIB_NAME%%CLASS_NAME%PresetDefs::sParamDefs%SHADER_NO%) / sizeof(PresetParamDef)));
